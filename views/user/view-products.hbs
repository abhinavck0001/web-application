<section>
    <div class="container ">
        <div class="row ">
            {{#each products}}
            <div class="col-md-3 p-3 ">

                <div class="card mt-5" style="width: 15rem;">
                    {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Category}}</p>
                        <p class="card-text">{{this.Price}}</p>
                        <p class="card-text"><img class=" card-img-top" style="width: 50px;height: 50px;"
                                src="/product-images/{{this._id}}.jpg" alt=""></p>
                        <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>